@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mb-3" style="margin-top:50px; color:rgb(127,156,176)">登入</h1>

<div class="d-flex justify-content-center align-items-center">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="border p-4 rounded" style="background-color: rgb(127,156,176)">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label" style="color:white">帳號：</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Email" name="txtAccount" required>
            </div>
            <div class="mb-3">
                <label for="formGroupExampleInput2" class="form-label" style="color:white">密碼：</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Passwaord" name="txtPassword" required>
            </div>
        <div class="form-group">
                <div class="d-grid gap-2 col-6 mx-auto">
                    <input type="submit" value="登入" class="btn btn-warning btn-sm" />
                    <div class="text-center mt-3">
                        <a href="" class="btn btn-outline-warning btn-sm">回到 LookDay </a>
                    </div>
            </div>
        </div>
    </div>
}
</div>


