@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mb-3" style="margin-top:50px">登入</h1>

<div class="d-flex justify-content-center align-items-center" style="height: calc(100vh - 300px);">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal border p-4 rounded" style="background-color: #f8f9fa;">
            <h6 class="text-center">請輸入帳號與密碼</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group text-left">
                <label for="txtAccount">帳號</label>
            <div class="col-md-10">
                @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
            <div class="form-group text-left">
                <label for="txtPassword">密碼</label>
            <div class="col-md-10">
                @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="登入" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
</div>

<div class="text-center mt-3">
    @Html.ActionLink("取消(預計設定回到 LookDay 網站)", "Login")
</div>
