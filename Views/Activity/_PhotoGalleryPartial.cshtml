@model IEnumerable<dynamic>

<div id="photoGallery">
    @foreach (var photo in Model)
    {
        <div class="photo-item">
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(photo.Photo)" class="img-thumbnail rounded" style="width:280px; height:200px; object-fit:cover;" />
            <p>@photo.PhotoDesc</p>
        </div>
    }
</div>

<div class="photo-upload">
    <form id="photoUploadForm" enctype="multipart/form-data">
        <div class="form-group">
            <label for="newPhoto">上傳照片</label>
            <input type="file" class="form-control" id="newPhoto" name="newPhoto" accept="image/*" required />
        </div>
        <br />
        <div class="form-group">
            <label for="newPhotoDesc">照片描述</label>
            <input type="text" class="form-control" id="newPhotoDesc" name="newPhotoDesc" required />
        </div>
        <br />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-sm">上傳</button>
        </div>
    </form>
</div>

<style>
    #photoGallery {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .photo-item {
        text-align: center;
        margin-bottom: 10px;
    }

    .photo-upload {
        margin-top: 20px;
    }
</style>
