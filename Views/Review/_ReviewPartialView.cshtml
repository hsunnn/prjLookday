@model IEnumerable<prjLookday.ViewModels.ReviewViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        暫無評論
    </div>
}
else
{
    <form asp-action="DeleteSelectReviews">
        <div class="container">
            @foreach (var review in Model)
            {
                <div class="d-flex align-items-start mb-4">
                    <input id=@review.ReviewId value=@review.ReviewId name="ReviewID" type="checkbox" class="mr-3 mt-2" />
                    <div class="review-item p-3 border rounded shadow-sm bg-light flex-grow-1">
                        <div class="row">
                            <div class="col-md-2 text-center">
                                @if (review.UserPic != null)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(review.UserPic)" class="img-thumbnail rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" />
                                }
                                else
                                {
                                    <i class="fas fa-user-circle fa-5x"></i>
                                }
                            </div>
                            <div class="col-md-8">
                                <h5><strong>姓名:</strong> @review.UserName</h5>
                                <p><strong>帳號:</strong> @review.UserEmail</p>
                                <p><strong>評論:</strong> @review.Comment</p>
                            </div>
                            <div class="col-md-2 text-right">
                                <p>
                                    <strong>評分:</strong>
                                    <span style="font-size: 1.75rem; color: @(review.Rating > 4 ? "green" : "red");">@review.Rating</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="text-center">
                <input type="submit" value="刪除評論" class="btn btn-danger btn-sm" />
            </div>
        </div>
    </form>
}
