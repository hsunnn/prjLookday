@model IEnumerable<prjLookday.ViewModels.ReviewViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        暫無評論
    </div>
}
else
{
    <div class="container">
        @foreach (var review in Model)
        {
            <input id="Checkbox1" type="checkbox" />
            <div class="review-item mb-4 p-3 border rounded shadow-sm bg-light">
                <div class="row">
                    <div class="col-md-2 text-center">
                        @if (review.UserPic != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(review.UserPic)" class="img-thumbnail rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" />
                        }
                        else
                        {
                            <i class="fas fa-user-circle fa-5x"></i>
                        }
                    </div>
                    <div class="col-md-8">
                        <h5><strong>姓名:</strong> @review.UserName</h5>
                        <p><strong>帳號:</strong> @review.UserEmail</p>
                        <p><strong>評論:</strong> @review.Comment</p>
                    </div>
                    <div class="col-md-2 text-right">
                        <p>
                            <strong>評分:</strong>
                            <span style="font-size: 1.75rem; color: @(review.Rating > 4 ? "green" : "red");">@review.Rating</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
